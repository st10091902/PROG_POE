@model PROG_POE_P3.Models.ReportViewModel

<h2 class="text-center my-4">Approved Claims Report</h2>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer ID</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.ApprovedClaims)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.LecturerID</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <h4>Total Summary</h4>
    <p><strong>Total Hours:</strong> @Model.TotalHours</p>
    <p><strong>Total Amount:</strong> R @Model.TotalAmount.ToString("F2")</p>
</div>
