@model IEnumerable<PROG_POE_P3.Models.Claim>

<h2 class="text-center my-4">My Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        <strong>No claims found!</strong> Please check your Lecturer ID and try again.
    </div>
}
else
{
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Submission Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        @if (claim.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (claim.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                            <p class="text-danger small">@claim.RejectionReason</p>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
